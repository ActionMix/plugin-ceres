{% set formFieldId   = widget.settings.key.mobile | default(uid()) %}
{% set isRequired    = widget.settings.isRequired.mobile %}
{% set label         = widget.settings.label.mobile %}
{% set isMailSubject = widget.settings.isMailSubject.mobile %}
{% set isReplyToName = widget.settings.isReplyToName.mobile %}
{% set inlineSpacings = WidgetHelper.getInlineSpacings(widget.settings, widget.settings.customPadding.mobile, widget.settings.customMargin.mobile) %}
{% set spacingClasses = WidgetHelper.getSpacingClasses(widget.settings, widget.settings.customPadding.mobile, widget.settings.customMargin.mobile) %}

<div{% if customClass | length > 0 %} class="{{ customClass }}"{% endif %}{% if inlineSpacings | length > 0 %} style="{{ inlineSpacings }}"{% endif %}>
    <div class="input-unit{% if isRequired %} required{% endif %}">
        <input
            name="{{ formFieldId }}"
            type="text"
            id="{{ formFieldId }}"
            {% if isRequired %}data-validate="text"{% endif %}>

        <label for="{{ formFieldId }}">
            {{ label }}{% if isRequired %}*{% endif %}
        </label>
        {% if isMailSubject %}
            <input type="hidden" data-mail="subject" value="{{ formFieldId }}">
        {% endif %}
        {% if isReplyToName %}
            <input type="hidden" data-mail="reply-to-name" value="{{ formFieldId }}">
        {% endif %}
    </div>
</div>
