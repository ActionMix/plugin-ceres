{% import "Ceres::Widgets.Helper.WidgetHelper" as WidgetHelper %}

{% set text             = widget.settings.text.mobile %}
{% set appearance       = widget.settings.appearance.mobile %}
{% set spacingSettings  = widget.settings.spacing %}
{% set hasSpacing       = spacingSettings.customMargin.mobile %}
{% set inlineSpacings   = WidgetHelper.getInlineSpacings(spacingSettings, "", spacingSettings.customMargin.mobile) %}
{% set spacingClasses   = WidgetHelper.getSpacingClasses(spacingSettings, "", spacingSettings.customMargin.mobile) %}

<div class="widget widget-code widget-{{ appearance | default('primary') }}{% if spacingClasses | length > 0 %} {{ spacingClasses }}{% endif %}"{% if inlineSpacings | length > 0 %} style="{{ inlineSpacings }}"{% endif %}>
    <div class="widget-inner bg-appearance"{{ WidgetHelper.makeCodeEditable('text', 'Ceres::Widget.textLabel', isPreview) }}>
        {{ text | raw }}
    </div>
</div>