{
    "identifier": "Ceres::ToolbarWidget",
    "label": "Widget.toolbarLabel",
    "previewImageURL": "/images/widgets/toolbar.svg",
    "type": "categoryitem",
    "categories": ["categoryitem"],
    "position": 100,
    "widgetClass": "Ceres\\Widgets\\Category\\ToolbarWidget",
    "allowedNestingTypes": ["structure", "static", "default", "toolbar", "categoryitem"],
    "settings": {
        "customClass":"@include(customClass)",
        "appearance": {
            "type": "select",
            "required": true,
            "defaultValue": "primary",
            "options": "@include(appearance)"
        },
        "icon": {
            "type": "select",
            "required": true,
            "defaultValue": "fa-sliders",
            "options": "@include(icon)"
        },
        "text": {
            "type": "text",
            "required": false,
            "options": {
                "name": "Widget.toolbarTextLabel",
                "tooltipText": "Widget.toolbarTextTooltip"
            }
        },
        "spacing":"@include(spacing)"
    }
}
