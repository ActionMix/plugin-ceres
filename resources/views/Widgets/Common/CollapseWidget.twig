{% import "Ceres::Widgets.Helper.WidgetHelper" as WidgetHelper %}

{% set collapseBoxes = widget.settings.collapseBox.mobile %}
{% set collapseId    = uid() %}
{% set renderContent = false %}

{% set spacingSettings = widget.settings.spacing %}
{% set inlineSpacings = WidgetHelper.getInlineSpacings(spacingSettings, spacingSettings.customPadding.mobile, spacingSettings.customMargin.mobile) %}
{% set spacingClasses = WidgetHelper.getSpacingClasses(spacingSettings, spacingSettings.customPadding.mobile, spacingSettings.customMargin.mobile) %}

{% for collapseBox in collapseBoxes if collapseBox.headline is not empty %}
    {% set renderContent = true %}
{% endfor %}

{% if renderContent %}
    <div class="widget accordion widget-{{ widget.settings.appearance.mobile | default('primary')  }} {% if spacingClasses | length > 0 %} {{ spacingClasses }}{% endif %}"  id="accordion_{{ collapseId }}"
    {% if inlineSpacings | length > 0 %} style="{{ inlineSpacings }}"{% endif %}>
        {% for collapseBox in collapseBoxes %}
        <div class="card">
          <button class="card-header btn btn-link text-appearance collapsed" id="heading_{{ collapseId }}_{{ loop.index }}" type="button" data-toggle="collapse" data-target="#collapse_{{ collapseId }}_{{ loop.index }}" aria-expanded="false" aria-controls="collapse_{{ collapseId }}_{{ loop.index }}">
            <h5 class="h5 pr-5 mb-0">
                {{ collapseBox.headline | raw }}
                <i class="fa fa-chevron-down"></i>
            </h5>
          </button>

          <div id="collapse_{{ collapseId }}_{{ loop.index }}" class="collapse" aria-labelledby="heading_{{ collapseId }}_{{ loop.index }}" data-parent="#accordion_{{ collapseId }}">
            <div class="card-body">
              {{ collapseBox.text | raw }}
            </div>
          </div>
        </div>
        {% endfor %}
    </div>
{% endif %}
