{
    "identifier": "Ceres::LiveShoppingWidget",
    "label": "Widget.liveShoppingLabel",
    "previewImageURL": "/images/widgets/newsletter.svg",
    "type": "default",
    "allowedNestingTypes": [
      "default",
      "structure"
    ],
    "widgetClass": "Ceres\\Widgets\\Common\\LiveShoppingWidget",
    "settings": {
        "title": {
            "type": "inputText",
            "required": false,
            "label": "Widget.liveShoppingTitleLabel",
            "options": {
                "tooltip": "Widget.liveShoppingTitleTextTooltip",
                "defaultValue": ""
            }
        },
        "subTitle": {
            "type": "inputText",
            "required": false,
            "label": "Widget.liveShoppingDescriptionLabel",
            "options": {
                "tooltip": "Widget.liveShoppingSubTitleTextTooltip",
                "defaultValue": ""
            }
        },
        "liveShoppingSelection": {
            "type": "selectBox",
            "required": true,
            "label": "Widget.liveShoppingSelectionLabel",
            "options": {
                "tooltip": "Widget.liveShoppingSelectionTooltip",
                "defaultValue": 1,
                "selectBoxValues": [
                    {
                        "value": 1,
                        "caption": "Widget.liveShoppingSelectionValue1",
                        "position": 0
                    },
                    {
                        "value": 2,
                        "caption": "Widget.liveShoppingSelectionValue2",
                        "position": 1
                    },
                    {
                        "value": 3,
                        "caption": "Widget.liveShoppingSelectionValue3",
                        "position": 2
                    },
                    {
                        "value": 4,
                        "caption": "Widget.liveShoppingSelectionValue4",
                        "position": 3
                    },
                    {
                        "value": 5,
                        "caption": "Widget.liveShoppingSelectionValue5",
                        "position": 4
                    },
                    {
                        "value": 6,
                        "caption": "Widget.liveShoppingSelectionValue6",
                        "position": 5
                    },
                    {
                        "value": 7,
                        "caption": "Widget.liveShoppingSelectionValue7",
                        "position": 6
                    },
                    {
                        "value": 8,
                        "caption": "Widget.liveShoppingSelectionValue8",
                        "position": 7
                    },
                    {
                        "value": 9,
                        "caption": "Widget.liveShoppingSelectionValue9",
                        "position": 8
                    },
                    {
                        "value": 10,
                        "caption": "Widget.liveShoppingSelectionValue10",
                        "position": 9
                    }
                ]
            }
        },
        "variationId": {
            "type": "inputText",
            "required": false,
            "label": "Widget.liveShoppingVariationIdLabel",
            "options": {
                "tooltip": "Widget.liveShoppingVariationIdTextTooltip",
                "defaultValue": ""
            }
        },
        "sorting": {
            "type": "selectBox",
            "required": true,
            "isVisible": "variationId > 0",
            "label": "Widget.liveShoppingSortingLabel",
            "options": {
                "tooltip": "Widget.liveShoppingSortingTooltip",
                "defaultValue": 1,
                "selectBoxValues": [
                    {
                      "value": 1,
                      "caption": "Widget.liveShoppingSortingValue1",
                      "position": 0
                    }
                ]
            }
        },
        "timer": {
            "type": "selectBox",
            "required": true,
            "label": "Widget.liveShoppingTimerLabel",
            "options": {
                "tooltip": "Widget.liveShoppingTimerTooltip",
                "defaultValue": 1,
                "selectBoxValues": [
                    {
                      "value": 1,
                      "caption": "Widget.liveShoppingTimerValueTimer",
                      "position": 0
                    },
                    {
                        "value": 2,
                        "caption": "Widget.liveShoppingTimerValueStock",
                        "position": 0
                    },
                    {
                        "value": 3,
                        "caption": "Widget.liveShoppingTimerValueTimerAndStock",
                        "position": 0
                    }
                ]
            }
        },
        "showCrossPrice": {
            "type": "checkBox",
            "required": true,
            "label": "Widget.liveShoppingShowCrossPriceLabel",
            "options": {
                "defaultValue": true
            }
        },
        "customImagePath": {
            "type": "inputFile",
            "required": false,
            "defaultValue": "",
            "label": "Widget.liveShoppingCustomImagePathLabel",
            "options": {
                "tooltip": "Widget.liveShoppingCustomImagePathTooltip"
            }
        }
    }
}