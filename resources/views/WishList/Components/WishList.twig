{{ component("Ceres::WishList.Components.WishListItem" ) }}

<script type="x/template" id="vue-wish-list">

    <div>
        <transition-group name="wish-list-item-transition" tag="div">
            <wish-list-item v-for="(wishListItem, index) in wishListItems" :key="wishListItem.id" :wish-list-item="wishListItem" :id="'article_' + index"></wish-list-item>
        </transition-group>


        <transition name="wish-list-no-items-transition">
            <p class="h4 text-muted wish-list-no-items-label" v-if="!wishListIds[0]">{{ trans("Ceres::Template.wishListNoItems") }}</p>
        </transition>

        <div :class="{'loading': isLoading}">
            {% include "Ceres::ItemList.Partials.LoadingAnimation" with { 'loadingAnimationType': config("Ceres.item.loading_animation_type") } %}
        </div>

    </div>

</script>
