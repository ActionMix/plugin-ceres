{% extends getPartial('page-design') %}

{% block PartialHead %}
    {% embed "Ceres::PageDesign.Partials.PageMetadata" %}
        {% block title          trans('Ceres::Template.contact') %}
        {% block description    trans('Ceres::Template.contactMetaDescription') %}
        {% block robots         ceresConfig.meta.robotsContact %}
    {% endembed %}

    {% if config("Ceres.global.google_recaptcha_api_key") | length > 0 %}
        <script src='https://www.google.com/recaptcha/api.js' async defer></script>
    {% endif %}
{% endblock %}

{% block PageBody %}

    {{ component( "Ceres::Customer.Components.Contact.ContactForm" ) }}

    <div class="page-content container-max contact">
        <contact-form template="#vue-contact-form"></contact-form>
    </div>

{% endblock %}
