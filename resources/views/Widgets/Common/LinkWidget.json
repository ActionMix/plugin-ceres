    "type": "static",
    "categories": ["text"],
    "position": 900,
    "widgetClass": "Ceres\\Widgets\\Common\\LinkWidget",
    "settings": {
        "customClass":"@include(customClass)",
        "appearance": {
            "type": "select",
            "required": true,
            "defaultValue": "none",
