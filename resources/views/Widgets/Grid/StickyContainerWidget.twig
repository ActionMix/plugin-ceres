{% set customClass = widget.settings.customClass.mobile %}
{% set stickTo     = widget.settings.stickTo.mobile %}

<div class="widget widget-sticky {{ stickTo }}{% if customClass | length > 0 %} {{ customClass }}{% endif %}" v-stick-in-parent>
    <div class="widget-inner"{% if isPreview %} data-builder-child-container="sticky"{% endif %}>
        {{ children.sticky | raw }}
    </div>
</div>
