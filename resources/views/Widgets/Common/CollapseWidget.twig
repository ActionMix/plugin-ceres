{% set collapseBoxes = widget.settings.collapseBox.mobile %}
{% set collapseId    = uid() %}
{% set renderContent = false %}

{% for collapseBox in collapseBoxes if collapseBox.headline is not empty %}
    {% set renderContent = true %}
{% endfor %}

{% if renderContent %}
    <div class="widget accordion widget-{{ widget.settings.appearance.mobile | default('primary')  }}" id="accordion_{{ collapseId }}">
        {% for collapseBox in collapseBoxes %}
        <div class="card">
          <button class="card-header btn btn-link" id="heading_{{ collapseId }}_{{ loop.index }}" type="button" data-toggle="collapse" data-target="#collapse_{{ collapseId }}_{{ loop.index }}" aria-expanded="true" aria-controls="collapse_{{ collapseId }}_{{ loop.index }}">
            <h5 class="h5 mb-0">
                {{ collapseBox.headline | raw }}
            </h5>
          </button>

          <div id="collapse_{{ collapseId }}_{{ loop.index }}" class="collapse{% if loop.index == 1%} show{% endif %}" aria-labelledby="heading_{{ collapseId }}_{{ loop.index }}" data-parent="#accordion_{{ collapseId }}">
            <div class="card-body">
              {{ collapseBox.text | raw }}
            </div>
          </div>
        </div>
        {% endfor %}
    </div>
{% endif %}
