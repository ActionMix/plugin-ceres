{
    "identifier": "Ceres::PaginationWidget",
    "label": "Widget.paginationLabel",
    "previewImageURL": "/images/widgets/pagination.svg",
    "type": "categoryitem",
    "categories": ["categoryitem"],
    "position": 600,
    "widgetClass": "Ceres\\Widgets\\Category\\PaginationWidget",
    "settings": {
        "customClass":"@include(customClass)",
        "appearance": {
            "type": "select",
            "required": true,
            "defaultValue": "primary",
            "options": "@include(appearance)"
        },
        "showFirstPage": {
            "type": "checkbox",
            "defaultValue": false,
            "options": {
                "name": "Widget.paginationShowFirstPageLabel"
            }
        },
        "showLastPage": {
            "type": "checkbox",
            "defaultValue": false,
            "options": {
                "name": "Widget.paginationShowLastPageLabel"
            }
        },
        "pageLimit": {
            "type": "slider",
            "required": false,
            "defaultValue": 1,
            "options": {
                "inputInterval": 1,
                "inputMax": 10,
                "name": "Widget.paginationPageLimitLabel"
            }
        },
        "alignment": "@include(alignment)",
        "spacing":"@include(spacing)"
    }
}
