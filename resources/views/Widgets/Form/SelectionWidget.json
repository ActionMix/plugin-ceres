    "position": 500,
    "widgetClass": "Ceres\\Widgets\\Form\\SelectionWidget",
    "settings": {
        "key": {
            "type": "text",
            "required": false,
            "defaultValue": "",
            "options": {
                "name": "Widget.mailFormFieldKeyLabel",
                "tooltip": "Widget.mailFormFieldKeyTooltip"
            }
        },
        "label": {
            "type": "text",
            "required": false,
            "defaultValue": "",
            "options": {
                "name": "Widget.mailFormFieldLabelLabel",
                "tooltip": "Widget.mailFormFieldLabelTooltip"
