{% set isNameEmpty = trans("Ceres::Template.ItemList" ~ itemListId ~ "ListName") == 'Name' or 
                     trans("Ceres::Template.ItemList" ~ itemListId ~ "ListName") is empty %}

{% if listType == "last_seen" %}
    {% if isNameEmpty %}
        {% set header = trans("Ceres::Template.itemListLastSeen") %}
    {% else %}
        {% set header = trans("Ceres::Template.ItemList" ~ itemListId ~ "ListName") %}
    {% endif %}
{% elseif listType == "cross_selling" %}
    {% if isNameEmpty %}
        {% set header = trans("Ceres::Template.itemListX" ~ config("Ceres.item.lists.cross_selling_type")) %}
    {% else %}
        {% set header = trans("Ceres::Template.ItemList" ~ itemListId ~ "ListName") %}
    {% endif %}
{% elseif listType == "tag_list" %}
    {% if isNameEmpty %}
        {% set header = "Tags" %}
    {% else %}
        {% set header = trans("Ceres::Template.ItemList" ~ itemListId ~ "ListName") %}
    {% endif %}
{% endif %}

{% if isHome %}
    <div class="section-header m-b-1">
        <h2>{{ header }}</h2>
    </div>
{% else %}
    <p class="h3">
        {{ header }}
    </p>
{% endif %}
