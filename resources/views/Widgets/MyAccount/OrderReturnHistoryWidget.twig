{% import "Ceres::Widgets.Helper.TwigBuilder" as Twig %}

{{ Twig.import("LayoutContainer", "Ceres::PageDesign.Macros.LayoutContainer") }}

{{ Twig.component("Ceres::MyAccount.Components.OrderReturnHistoryList") }}

{% set hintText = widget.settings.text.mobile %}
{% set returnsPerPage = widget.settings.returnsPerPage.mobile %}
{% set itemsPerList = widget.settings.itemsPerList.mobile %}

<div class="widget widget-order-return-history">
    <h3>{{ Twig.trans("Ceres::Template.returnHistory") }}</h3>
    {% if hintText is not empty %}
        {{ hintText | raw }}
    {% else %}
        <p class="text-muted small font-italic">{{ Twig.trans("Ceres::Template.returnHistoryHint") }}</p>
    {% endif %}

    {% if orderList.totalsCount > 30 %}
        <order-return-history-list
            :returns-per-page="{{ returnsPerPage }}"
            :items-per-list="{{ itemsPerList }}"
            :show-first-page="{{ config('Ceres.pagination.showFirstPage') }}"
            :show-last-page="{{ config('Ceres.pagination.showLastPage') }}">
        </order-return-history-list>
    {% else %}
        <p class="text-muted h4 my-4 text-center">{{ trans("Ceres::Template.returnHistoryNoReturns") }}</p>
    {% endif %}
</div>
