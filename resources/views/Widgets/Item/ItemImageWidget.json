{
    "identifier": "Ceres::ItemImageWidget",
    "label": "Widget.itemImageLabel",
    "previewImageURL": "/images/widgets/item-image.svg",
    "type": "item",
    "categories": ["item"],
    "position": 200,
    "widgetClass": "Ceres\\Widgets\\Item\\ItemImageWidget",
    "settings": {
        "appearance": {
            "type": "select",
            "required": true,
            "defaultValue": "primary",
            "options": "@include(appearance)"
        },
        "quantity": {
            "type": "number",
            "required": true,
            "defaultValue": 10,
            "options": {
                "name": "Widget.itemImageQuantityLabel",
                "tooltipText": "Widget.itemImageQuantityTooltip"
            }        
        },
        "imageSize": {
            "type": "select",
            "required": true,
            "defaultValue": "url",
            "options": {
                "name": "Widget.itemImageSizeLabel",
                "tooltipText": "Widget.itemImageTooltip",
                "listBoxValues": [
                    {
                        "value": "urlPreview",
                        "caption": "Widget.itemImageSizePreview"
                    },
                    {
                        "value": "urlSecondPreview",
                        "caption": "Widget.itemImageSizeSecondPreview"
                    },
                    {
                        "value": "urlMiddle",
                        "caption": "Widget.itemImageSizeMiddle"
                    },
                    {
                        "value": "url",
                        "caption": "Widget.itemImageSizeFull"
                    }
                ]
            }
        },
        "showThumbs": {
            "type": "checkbox",
            "defaultValue": true,
            "options": {
                "name": "Widget.itemImageShowThumbsLabel",
                "tooltipText": "Widget.itemImageShowThumbsTooltip"
            }
        },
        "showDots": {
            "type": "checkbox",
            "defaultValue": true,
            "options": {
                "name": "Widget.itemImageShowDotsLabel",
                "tooltipText": "Widget.itemImageShowDotsTooltip"
            }
        }
    }
}
