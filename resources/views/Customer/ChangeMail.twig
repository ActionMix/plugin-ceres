{% extends getPartial('page-design') %}

{% block PartialHead %}
    <meta name="robots" content="NOINDEX, NOFOLLOW">
    <title>{{ trans("Ceres::Template.myAccountChangeEmail") }} | {{ trans("Ceres::Template.headerCompanyName") }}</title>
{% endblock %}

{% block PageBody %}

    <form action="/mail" method="POST">
        <div class="container-max page-content">
            <div class="row">
                <div class="col-12 col-sm-8 col-lg-6 mb-5 content-center">
                    <h1 class="mb-5 mt-4">{{ trans("Ceres::Template.myAccountChangeEmail") }}</h1>

                    <span>{{ trans("Ceres::Template.myAccountChangeEmailInfoText") }}</span>

                    <div class="input-unit mt-3">
                        <label for="email-input-id">{{ trans("Ceres::Template.myAccountNewEmail") }}</label>
                        <input type="email" name="email" autocomplete="email" class="form-control" id="email-input-id">
                    </div>

                    <div class="input-unit">
                        <label for="email_change_password">{{ trans("Ceres::Template.loginPassword") }}</label>
                        <input type="password" name="password" autocomplete="current-password" class="form-control" id="email_change_password">
                    </div>

                    <hr>

                    <span class="input-group-btn">
                        <button type="submit" v-waiting-animation-infinite class="btn btn-primary float-right btn-medium btn-xs-max-width">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                            <span>{{ trans("Ceres::Template.myAccountChangeEmail") }}</span>
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </form>

{% endblock %}
