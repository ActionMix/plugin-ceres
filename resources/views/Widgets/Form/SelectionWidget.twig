{% import "Ceres::Widgets.Helper.WidgetHelper" as WidgetHelper %}

{% set formFieldId     = widget.settings.key.mobile | default(uid()) %}
{% set isRequired      = widget.settings.isRequired.mobile %}
{% set label           = widget.settings.label.mobile %}
{% set selectType      = widget.settings.selectType.mobile %}
{% set selectOptions   = widget.settings.selectOptions.mobile %}
{% set spacingSettings = widget.settings.spacing %}
{% set inlineSpacings  = WidgetHelper.getInlineSpacings(spacingSettings, spacingSettings.customPadding.mobile, spacingSettings.customMargin.mobile) %}
{% set spacingClasses  = WidgetHelper.getSpacingClasses(spacingSettings, spacingSettings.customPadding.mobile, spacingSettings.customMargin.mobile) %}

<div{% if spacingClasses | length > 0 %} class="{{ spacingClasses }}"{% endif %}{% if inlineSpacings | length > 0 %} style="{{ inlineSpacings }}"{% endif %}>
    {% if selectType == 'dropdown' %}
        <div class="input-unit{% if isRequired %} required{% endif %}"{% if isRequired %} data-validate=""{% endif %}>
            <select class="custom-select"
                    id="{{ formFieldId }}"
                    name="{{ formFieldId }}">

                {% for i, option in selectOptions %}
                    <option value="{{ i }}">{{ option }}</option>
                {% endfor %}

            </select>

            <label for="{{ formFieldId }}">
                {{ label }}{% if isRequired %}*{% endif %}
            </label>

        </div>
    {% else %}
        <div class="select-unit{% if isRequired %} required{% endif %}"{% if isRequired %} data-validate=""{% endif %}>
            {% if label %}
                <label for="{{ formFieldId }}">
                    {{ label }}{% if isRequired %}*{% endif %}
                </label>
            {% endif %}
            <div class="m-b-1">
                {% for i, option in selectOptions %}
                    <div class="form-check">
                        <input class="form-check-input"
                               type="{{ selectType }}"
                               name="{{ formFieldId }}{% if selectType == 'checkbox' %}[]{% endif %}"
                               value="{{ i }}"
                               id="{{ formFieldId }}_{{ i }}">
                        <label class="form-check-label" for="{{ formFieldId }}_{{ i }}">
                            {{ option }}
                        </label>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
</div>