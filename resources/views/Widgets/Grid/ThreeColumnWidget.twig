{% if widgetSettings.layout == "default" %}
    <!-- 3 Spalten identisch: -->
    <div class="row">
        <div class="col-xs-4" data-builder-container>DROPZONE</div>
        <div class="col-xs-4" data-builder-container>DROPZONE</div>
        <div class="col-xs-4" data-builder-container>DROPZONE</div>
    </div>
{% elseif widgetSettings.layout == "a" %}
    <!-- 3 Spalten links groß: -->
    <div class="row">
        <div class="col-xs-6" data-builder-container>DROPZONE</div>
        <div class="col-xs-3" data-builder-container>DROPZONE</div>
        <div class="col-xs-3" data-builder-container>DROPZONE</div>
    </div>
{% elseif widgetSettings.layout == "b" %}
    <!-- 3 Spalten mitte groß: -->
    <div class="row">
        <div class="col-xs-3" data-builder-container>DROPZONE</div>
        <div class="col-xs-6" data-builder-container>DROPZONE</div>
        <div class="col-xs-3" data-builder-container>DROPZONE</div>
    </div>
{% elseif widgetSettings.layout == "c" %}
    <!-- 3 Spalten rechts groß: -->
    <div class="row">
        <div class="col-xs-3" data-builder-container>DROPZONE</div>
        <div class="col-xs-3" data-builder-container>DROPZONE</div>
        <div class="col-xs-6" data-builder-container>DROPZONE</div>
    </div>
{% elseif widgetSettings.layout == "d" %}
    <!-- 3 Spalten, links eine, rechts 2: -->
    <div class="row">
        <div class="col-xs-8" data-builder-container>DROPZONE</div>

        <div class="col-xs-4">
            <div class="row">
                <div class="col-xs-12" data-builder-container>DROPZONE</div>
                <div class="col-xs-12" data-builder-container>DROPZONE</div>
            </div>
        </div>
    </div>
{% elseif widgetSettings.layout == "e" %}
    <!-- 3 Spalten, links 2, rechts eine: -->
    <div class="row">
        <div class="col-xs-4">
            <div class="row">
                <div class="col-xs-12" data-builder-container>DROPZONE</div>
                <div class="col-xs-12" data-builder-container>DROPZONE</div>
            </div>
        </div>

        <div class="col-xs-8" data-builder-container>DROPZONE</div>
    </div>
{% endif %}
