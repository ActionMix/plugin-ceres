<script type="x/template" id="vue-order-property-list-item">
    <div>

        <div v-if="inputType === 'text' || inputType === 'float' || inputType === 'int'" class="input-unit order-property-input" :class="{ 'active': property.property.value }" data-validate="text">
            <input type="text" @change="onInputValueChanged($event.target.value)" v-model="inputValue" v-tooltip data-toggle="tooltip" :title="property.property.names.description">
            <label>${property.property.names.name}
                <strong v-if="property.property.surcharge >= 0 && property.surcharge > 0">(+ ${ property.surcharge | currency})</strong>
                <strong v-if="property.property.surcharge > 0 && property.surcharge === 0">(+ ${ property.property.surcharge | currency})</strong>
            *</label>
        </div>

        <div v-else-if="inputType === 'checkbox' || inputType === 'radio'" class="form-check">
            <label class="form-check-label" v-tooltip data-toggle="tooltip" :title="property.property.names.description">
                <input v-if="inputType === 'checkbox'" class="form-check-input" type="checkbox" @change="onInputValueChanged($event.target.checked)">
                <input v-else class="form-check-input" type="radio" :name="property.group ? property.group.id : 'check' + _uid" @change="onInputValueChanged($event.target.value)" :value="property.property.id">
                ${property.property.names.name}

                <strong v-if="property.property.surcharge >= 0 && property.surcharge > 0">(+ ${ property.surcharge | currency})</strong>
                <strong v-if="property.property.surcharge > 0 && property.surcharge === 0">(+ ${ property.property.surcharge | currency})</strong>
            </label>
        </div>

        <div v-else-if="inputType === 'selection'">
            <div class="input-unit">
                <select class="custom-select">
                    <option :selected="true" :value="null">{{ trans("Ceres::Template.pleaseSelect") }}</option>
                </select>
                <label>${property.property.names.name}</label>
            </div>
        </div>

        <div v-else-if="inputType === 'file'">
            <label>${property.property.names.name}</label>
            <br>
            <div>
                <input type="file" size="50" accept="image/*"> 
            </div>
        </div>

    </div>
</script>
