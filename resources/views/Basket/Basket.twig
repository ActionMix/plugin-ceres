{% extends getPartial('page-design') %}
{% import "Ceres::PageDesign.Macros.LayoutContainer" as LayoutContainer %}

{% block PartialHead %}
    <meta name="robots" content="NOINDEX, NOFOLLOW">
    <title>{{ trans("Ceres::Template.basket") }} | {{ config("Ceres.header.company_name") }}</title>
{% endblock %}

{% block PageBody %}

    {{ component( "Ceres::Basket.Components.BasketList" ) }}
    {{ component( "Ceres::Basket.Components.Coupon" ) }}
    {{ component( "Ceres::Basket.Components.BasketTotals" ) }}

    <div v-cloak style="background: none" class="page-content basket container-max" itemtype="http://schema.org/Product http://schema.org/Thing http://schema.org/Offer http://schema.org/PriceSpecification">

        <div class="row m-t-1">
            <div class="col-xs-12">
                <h1 class="h2">{{ trans("Ceres::Template.basket") }}</h1>
            </div>
        </div>

        <hr>

        <div class="row">
            <div class="col-md-7">
                <div class="col-xs-12 p-t-2" style="background: white">
                    <basket-list template="#vue-basket-list" size="large"></basket-list>
                </div>
            </div>

            <div class="col-md-5" v-stick-in-parent>
                <div class="col-xs-12 p-y-2" style="background: white">
                    <basket-totals class="m-b-2" template="#vue-basket-totals" :config="{{ config("Ceres.basket.data")|split(', ')|json_encode() }}"></basket-totals>

                    <hr>
                    <coupon template="#vue-coupon"></coupon>
                    <hr>

                    {{ LayoutContainer.show("Ceres::Basket.BeforeCheckoutButton") }}
                    <a v-waiting-animation-infinite class="btn btn-primary btn-block" href="/checkout">
                        <i class="fa fa-arrow-right" aria-hidden="true"></i>
                        {{ trans("Ceres::Template.orderCheckout") }}
                    </a>
                    {{ LayoutContainer.show("Ceres::Basket.AfterCheckoutButton") }}
                </div>
            </div>
        </div>

        {% set beforeCouponContainer = LayoutContainer.show("Ceres::Basket.BeforeCoupon") %}

        {% if beforeCouponContainer|trim is not empty %}
            {{ beforeCouponContainer }}
            <hr class="m-y-2">
        {% endif %}

