{{ component("Ceres::WishList.Components.WishListItem" ) }}
{{ component( "Ceres::ItemList.Components.CategoryItem") }}

<script type="x/template" id="vue-wish-list">

    <div>

        <ul v-if="false" class="product-list row grid">
            <li class="col-12 col-sm-6 col-md-4 col-lg-3" v-for="(wishListItem, index) in wishListItems" :key="index">
                <category-item
                    :item-data="wishListItem.data"
                    :decimal-count="{{ ceresConfig.item.storeSpecial }}">
                </category-item>
            </li>
        </ul>


        <transition-group name="wish-list-item-transition" tag="div">
            <wish-list-item
                v-for="(wishListItem, index) in wishListItems"
                :key="wishListItem.id"
                :wish-list-item="wishListItem"
                :id="'article_' + index"
                @remove-item="removeItem({ id: wishListItem.data.variation.id, wishListItem: wishListItem, index })">
            </wish-list-item>
        </transition-group>


        <transition name="wish-list-no-items-transition">
            <p class="h4 text-muted wish-list-no-items-label" v-if="!wishListIds[0]">{{ trans("Ceres::Template.wishListNoItems") }}</p>
        </transition>

        <div :class="{'loading': isLoading}">
            {% include "Ceres::ItemList.Partials.LoadingAnimation" with { 'loadingAnimationType': config("Ceres.item.loading_animation_type") } %}
        </div>

    </div>

</script>
