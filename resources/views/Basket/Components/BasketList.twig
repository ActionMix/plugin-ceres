{{ component( "Ceres::Basket.Components.BasketListItem" ) }}

<script type="x/template" id="vue-basket-list">
    <div>
        <transition-group name="wish-list-item-transition" tag="div" v-if="size == 'slim'">
            <basket-list-item template="#vue-basket-list-item" v-for="basketItem in basketItems" :key="basketItem.id" :basket-item="basketItem" :size="size" language="{{ services.sessionStorage.getLang() }}"></basket-list-item>
        </transition-group>

        <basket-list-item v-else template="#vue-basket-list-item" v-for="basketItem in basketItems" :key="basketItem.id" :basket-item="basketItem" :size="size" language="{{ services.sessionStorage.getLang() }}"></basket-list-item>

        <div v-if="!basketItems.length > 0">
            <h5>{{ trans("Ceres::Template.orderNoItemsInBasket") }}</h5>
        </div>
    </div>
</script>