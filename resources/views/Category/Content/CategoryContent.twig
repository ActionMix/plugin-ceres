{% extends getPartial('page-design') %}

{% block PartialHead %}
    {% set categoryDetails = category.details[0] %}
    {% embed "Ceres::PageDesign.Partials.PageMetadata" %}
        {% block title          categoryDetails.metaTitle | default(categoryDetails.name) %}
        {% block description    categoryDetails.metaDescription %}
        {% block keywords       categoryDetails.metaKeywords %}
        {% block robots         metaRobots %}
    {% endembed %}
{% endblock %}

{% block PageBody %}

    {% set shopBuilderTemplate = shop_builder_category_template(category.id) %}
    {% if shopBuilderTemplate | trim is not empty %}
        <div class="container-max">
            <div class="row">
                <div class="col">
                    {{ shopBuilderTemplate | raw }}
                </div>
            </div>
        </div>
    {% else %}
        {% include category_template( category.id, lang, webstoreConfig.webstoreId ) ignore missing %}
    {% endif %}

{% endblock %}
