{% set formFieldId  = uid() %}
{% set width        = widget.settings.width.mobile %}
{% set isRequired   = widget.settings.isRequired.mobile %}
{% set label        = widget.settings.label.mobile %}
{% set fixedHeight  = widget.settings.fixedHeight.mobile %}
{% set rows         = widget.settings.rows.mobile %}

<div class="col-xs-12 col-md-{{ width }}">
    <div class="input-unit{% if isRequired %} required{% endif %} textarea">
        <textarea
                name="{{ formFieldId }}"
                id="{{ formFieldId }}"
                rows="{{ rows }}"
                {% if fixedHeight %}class="no-resize"{% endif %}
                {% if formField.isRequired %}data-validate="text"{% endif %}>
        </textarea>

        <label for="{{ formFieldId }}">
            {{ label }}{% if isRequired %}*{% endif %}
        </label>
    </div>
</div>