{
    "identifier": "Ceres::ContactDetailsWidget",
    "label": "Widget.contactDetailsLabel",
    "previewImageURL": "/images/widgets/contact-data.svg",
    "type": "default",
    "categories": ["contact"],
    "position": 100,
    "widgetClass": "Ceres\\Widgets\\Contact\\ContactDetailsWidget",
    "settings": {
        "customClass":"@include(customClass)",
        "appearance": {
            "type": "select",
            "required": true,
            "defaultValue": "primary",
            "options": "@include(appearance)"
        },
        "spacing":"@include(spacing)",
        "companyName": {
            "type": "text",
            "required": false,
            "options": {
                "name": "Widget.contactDetailsCompanyNameLabel",
                "tooltipText": "Widget.contactDetailsCompanyNameTooltip"
            }
        },
        "address": {
            "type": "textarea",
            "required": false,
            "options": {
                "name": "Widget.contactDetailsAddressLabel",
                "tooltipText": "Widget.contactDetailsAddressTooltip"
            }
        },
        "phone": {
            "type": "text",
            "required": false,
            "options": {
                "name": "Widget.contactDetailsPhoneLabel",
                "tooltipText": "Widget.contactDetailsPhoneTooltip"
            }
        },
        "fax": {
            "type": "text",
            "required": false,
            "options": {
                "name": "Widget.contactDetailsFaxLabel",
                "tooltipText": "Widget.contactDetailsFaxTooltip"
            }
        },
        "email": {
            "type": "text",
            "required": false,
            "options": {
                "name": "Widget.contactDetailsEmailLabel",
                "tooltipText": "Widget.contactDetailsEmailTooltip"
            }
        },
        "businessTimes": {
            "type": "textarea",
            "required": false,
            "options": {
                "name": "Widget.contactDetailsBusinessTimesLabel",
                "tooltipText": "Widget.contactDetailsBusinessTimesTooltip"
            }
        }
    }
}
