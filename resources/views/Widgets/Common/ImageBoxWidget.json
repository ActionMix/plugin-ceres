            "options": {
                "tooltip": "Widget.imageBoxImageSizeTooltip",
                "defaultValue": "cover",
                "selectBoxValues": [
                    {
                        "value": "cover",
                        "caption": "Widget.imageBoxImageSizeCover",
                        "position": 0
                    },
                    {
                        "value": "contain",
